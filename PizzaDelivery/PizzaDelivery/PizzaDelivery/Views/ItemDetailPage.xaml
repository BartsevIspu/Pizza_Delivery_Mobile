<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PizzaDelivery.Views.ItemDetailPage"
             Title="{Binding Title}"
             BackgroundColor="{StaticResource Primary}">

    <StackLayout Spacing="20" Padding="20">
        <Image Source="pizza.png" HeightRequest="200" WidthRequest="200" HorizontalOptions="Center"/>
        <Label Text="{Binding Text}" FontSize="24" TextColor="White" FontAttributes="Bold"/>
        <Label Text="{Binding Description}" FontSize="18" TextColor="{StaticResource Light_gray}"/>
        <Button Text="В Корзину" TextColor="white" BackgroundColor="{StaticResource Accent}" WidthRequest="200"
                FontSize="20" HorizontalOptions="Center" CornerRadius="30" />
    </StackLayout>
    
    
</ContentPage>