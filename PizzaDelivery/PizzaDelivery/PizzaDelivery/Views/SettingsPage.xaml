<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PizzaDelivery.Views.SettingsPage"
             Title="Настройки"
             BackgroundColor="{StaticResource Primary}">
  <ScrollView>
      <StackLayout Padding="20, 20, 20, 20">
            <Button Text="Контакты" TextColor="{StaticResource Light_gray}" HorizontalOptions="StartAndExpand"
                  BackgroundColor="Transparent" FontSize="18"></Button>
            <Button Text="О приложении" TextColor="{StaticResource Light_gray}" HorizontalOptions="StartAndExpand"
                  BackgroundColor="Transparent" FontSize="18"></Button>
            <Button Text="Настройки" TextColor="{StaticResource Light_gray}" HorizontalOptions="StartAndExpand"
                  BackgroundColor="Transparent" FontSize="18"></Button>
        </StackLayout>
    </ScrollView>
</ContentPage>